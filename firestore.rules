rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow user to read and update their own profile.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow a new user to create their own profile document.
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/{collection}/{docId} {
      // Allow full access to subcollections (transactions, budgets, bills) for the owner.
      allow list, read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
