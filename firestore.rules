rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow user to read and write to their own user document
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow user to create their own user document on sign-up
      allow create: if request.auth != null;
    }

    match /users/{userId}/transactions/{transactionId} {
      // Allow full access to transactions for the owner user
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/budgets/{budgetId} {
      // Allow full access to budgets for the owner user
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/bills/{billId} {
      // Allow full access to bills for the owner user
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
