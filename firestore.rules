rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Izinkan pengguna untuk membaca dan memperbarui dokumen pengguna mereka sendiri.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Izinkan pengguna baru untuk membuat dokumen pengguna mereka saat mendaftar.
      allow create: if request.auth != null;
    }

    match /users/{userId}/transactions/{transactionId} {
      // Izinkan akses penuh ke transaksi hanya untuk pengguna pemilik.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/budgets/{budgetId} {
      // Izinkan akses penuh ke anggaran hanya untuk pengguna pemilik.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/bills/{billId} {
      // Izinkan akses penuh ke tagihan hanya untuk pengguna pemilik.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
