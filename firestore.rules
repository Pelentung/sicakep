rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow a user to read and update their own profile
      allow read, update: if isOwner(userId);

      // Allow a user to create their own profile document
      allow create: if request.auth.uid != null;

      // Rules for the 'transactions' subcollection
      match /transactions/{transactionId} {
        // Allow full access (read, write, delete) to the owner
        allow read, write, delete: if isOwner(userId);
      }
      
      // Rules for the 'budgets' subcollection
      match /budgets/{budgetId} {
        // Allow full access to the owner
        allow read, write, delete: if isOwner(userId);
      }
      
      // Rules for the 'bills' subcollection
      match /bills/{billId} {
        // Allow full access to the owner
        allow read, write, delete: if isOwner(userId);
      }
    }
  }
}
